<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Modifier_MissionController">
   <children>
      <VBox alignment="CENTER" prefHeight="411.0" prefWidth="609.0" spacing="25.0">
         <children>
            <DatePicker fx:id="myDatePicker" onAction="#getDate" prefHeight="25.0" prefWidth="761.0" promptText="Date" />
            <TextField fx:id="solde" alignment="CENTER" layoutX="10.0" layoutY="10.0" promptText="prix" />
            <TextField fx:id="id_livreur" alignment="CENTER" layoutX="10.0" layoutY="35.0" promptText="id livreur" />
            <TextField fx:id="adress_destination" alignment="CENTER" layoutX="10.0" layoutY="60.0" promptText="adresse destination" />
            <TextField fx:id="num_distinateur" alignment="CENTER" layoutX="10.0" layoutY="85.0" promptText="numero destinateur" />
            <TextField fx:id="id_colis" alignment="CENTER" layoutX="10.0" layoutY="110.0" promptText="id colis" />
            <Button mnemonicParsing="false" onAction="#ajouterm" prefHeight="48.0" prefWidth="153.0" style="-fx-background-color: lightblue;" text="Ajouter" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
      <Button layoutX="11.0" layoutY="8.0" mnemonicParsing="false" onAction="#retour" style="-fx-background-color: red;" text="Retour" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
